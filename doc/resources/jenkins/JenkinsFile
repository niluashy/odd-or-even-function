node {
    stage('Init') {
        checkout scm
    }

    stage('Build') {
        sh 'mvn clean package'
    }

    stage('Publish') {
        azureFunctionAppPublish appName: env.myapppravin, 
                                azureCredentialsId: env.096e3a85-6da0-491d-bfa7-f3afe0cb91b5
                                filePath: '**/*.json,**/*.jar,bin/*,HttpTrigger-Java/*', 
                                resourceGroup: env.TCSEZCloud, 
                                sourceDirectory: 'target/azure-functions/odd-or-even-function-sample'
    }
}
